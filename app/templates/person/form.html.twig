{% extends 'base.html.twig' %}

{% block title %}
    {% if mode == 'create' %}Dodaj nową osobę{% else %}Edytuj osobę{% endif %}
{% endblock %}

{% block body %}
    <div class="card shadow-sm">
        <div class="card-body">
            <h4 class="mb-4">
                {% if mode == 'create' %}
                    ➕ Dodaj nową osobę
                {% else %}
                    ✏️ Edytuj osobę
                {% endif %}
            </h4>

            {{ form_start(form) }}

            <div class="mb-3">
                {{ form_label(form.fullName, 'Imię i nazwisko', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.fullName, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.fullName) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.email, 'Email', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.email) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.phone, 'Telefon', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.phone, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.phone) }}
            </div>

            <div class="d-flex justify-content-between">
                <a href="{{ path('person_list') }}" class="btn btn-secondary">Powrót</a>
                <button type="submit" class="btn btn-primary">Zapisz</button>
            </div>

            {{ form_errors(form) }}

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
